 @model List<StudentApp.StudenteViewModel>

@{
    ViewData["Title"] = "Lista Studenti";
}

<table>
    <thead>
        <tr>
            <th>Nome Completo</th>
            <th>Data di Nascita</th>
            <th>Email</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var studente in Model)
        {
            <tr>
                <td>@studente.NomeCompleto</td>
                <td>@studente.DataDiNascitaFormattata</td>
                <td>@studente.Email</td>
                <td><button class="dettaglioStudente" data-id="@studente.Id">Dettaglio</button></td>
            </tr>
        }
    </tbody>
</table>