@model StudenteListViewModel

@if (Model.Studenti != null && Model.Studenti.Count() > 0)
{
    <table id="studentiTable" class="table table-striped table-hover table-bordered">
        <thead>
        <th>Nome Completo</th>
        <th>Data di Nascita</th>
        <th>Email</th>
        <th>Azioni</th>
        </thead>
        <tbody>
            @foreach (var studente in Model.Studenti)
            {
                <tr>
                    <td>@studente.NomeCompleto</td>
                    <td>@studente.DataDiNascitaFormattata</td>
                    <td>@studente.Email</td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="showEditModal('@studente.Id')">Modifica</button>
                        <button class="btn btn-sm btn-danger" onclick="showDeleteModal('@studente.Id')">Elimina</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">Nessuno studente trovato!</p>
}
